#include <stdio.h>

int main() {
    int i, j, n;

    // Prompt the user to enter the value of 'n'
    printf("Enter the n value: ");
    scanf("%d", &n);

    // Outer loop controls the number of rows
    for (i = 0; i < n; i++) {
        // Inner loop controls the number of columns in each row
        for (j = 0; j < i + 1; j++) {
            // Print a single asterisk for each column
            printf("* ");
        }
        // Move to the next line after printing 'i+1' asterisks in the inner loop
        printf("\n");
    }

    return 0;
}
